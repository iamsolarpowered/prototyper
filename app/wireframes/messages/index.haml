- @title = 'Inbox'

%table.messages
  %tr
    %th From
    %th Subject
  - 10.times do
    %tr.message
      %td.from
        = link_to Name.name, '#'
      %td.subject
        = link_to HipsterIpsum.paragraph, ''
    
.pagination
  %ul
    %li
      %a{href: "#"} Prev
    %li.active
      %a{href: "#"} 1
    %li
      %a{href: "#"} 2
    %li
      %a{href: "#"} 3
    %li
      %a{href: "#"} 4
    %li
      %a{href: "#"} Next
      